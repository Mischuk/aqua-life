/* shorty */
.shorty
  position relative
  height 290px
  background-color #fff
  z-index 20
  top 0
  &:before
    content ''
    width 100%
    height 100px
    background-color #fff
    position absolute
    left 0
    top -50px
    z-index 10
    transform skewY(-3deg)
    outline: 1px solid transparent
    backface-visibility: hidden
  .slogan
    font-size 30px
    color $blue
    transform skewY(-3deg)
    outline: 1px solid transparent
    backface-visibility: hidden
    text-transform uppercase
    letter-spacing 1px
    strong
      bold()
  .title,
  .number
    position relative
    z-index 20
    text-align center
    color #fff
    transform skewY(-3deg)
    outline: 1px solid transparent
    backface-visibility: hidden
    anim(all, .25s)
    text-transform uppercase
