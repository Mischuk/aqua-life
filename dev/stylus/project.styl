  .item:hover .number
    color $blue
  .title
    position absolute
    left 0
    bottom -25px
    width 100%
    medium()
    font-size 30px
    text-transform uppercase
  .number
    font-size 110px
    line-height 80px
    .x-size
      font-size 50px
      bold()
    &.second
      letter-spacing -7px
    &.third
      letter-spacing -15px
      position relative
      &:after
        content '-'
        position absolute
        left 50%
        top 50%
        margin-left -30px
        margin-top -60px
      .minutes
        medium()
        font-size 30px
        letter-spacing 0px
        &:first-child
          display inline-block
          margin-left -5px
        &:last-child
          display inline-block
          padding-left 2px
  .ovh
    overflow hidden
    width 100%
    padding-top 30px
    position relative
    top -30px
  .ovh + .slogan
    position relative
    top -30px
  .item
