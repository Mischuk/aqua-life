  // .flip-container:hover .flipper,
  .flip-container.hover .flipper
    transform rotateY(180deg)
  .flip-container,
  .front,
  .back
    width 220px
    height 255px
  .flipper
    transition 0.6s
    transform-style preserve-3d
    position relative
  .front,
  .back
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
  .front
    z-index: 2
    a {
      display block
      position: relative;
      width: 220px;
      height: 127.02px;
      background-color: $blue;
      margin: 63.51px 0;
      border-left: solid 5px $blue;
      border-right: solid 5px $blue;
    }

    a:before,
    a:after {
      content: "";
      position: absolute;
      z-index: 1;
      width: 155.56px;
      height: 155.56px;
      -webkit-transform: scaleY(0.5774) rotate(-45deg);
      -ms-transform: scaleY(0.5774) rotate(-45deg);
      transform: scaleY(0.5774) rotate(-45deg);
      background-color: inherit;
      left: 27.2183px;
    }

    a:before {
      top: -77.7817px;
      border-top: solid 7.0711px $blue;
      border-right: solid 7.0711px $blue;
    }

    a:after {
      bottom: -77.7817px;
      border-bottom: solid 7.0711px $blue;
      border-left: solid 7.0711px $blue;
    }
  .back
    transform: rotateY(180deg);
    a {
      display block
