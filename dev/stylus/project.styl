/*!=================
  Base layout
====================*/
html,
*, *:after, *:before
  box-sizing border-box
html,
body
  height 100%
  min-width $min-width + 40
.wrapper
  width $min-width
  position relative
  margin 0 auto
  height 100%

/*!=================
  Basic elements
====================*/
html
  regular()
  font-size 30px
  line-height 1
img
  display inline-block
  vertical-align middle
  max-width 100%
  max-height 100%
  width auto
  height auto
.inp-textarea, textarea
